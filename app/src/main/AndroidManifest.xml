<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.platinebuilder">

    <application
        android:allowBackup="true"
        android:icon="@drawable/platine"
        android:label="@string/app_name"
        android:roundIcon="@drawable/platine"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:launchMode="singleTop" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SolutionActivity"
            android:theme="@style/AppChildTheme"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>